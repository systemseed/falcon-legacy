{
  "name": "systemseed/backend-gifts",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "package",
      "package": {
        "name": "flc/data_model",
        "version": "8.1.0",
        "type": "drupal-module",
        "dist": {
          "url": "https://github.com/e0ipso/data_model/archive/8.x-1.x.zip",
          "type": "zip"
        }
      }
    }
  ],
  "require": {
    "composer/installers": "^1.0.20",
    "drupal-composer/drupal-scaffold": "^2.0.1",
    "cweagans/composer-patches": "~1.0",
    "drupal/core": "8.5.3",
    "drush/drush": "~8.0",
    "drupal/console": "~1.0",
    "drupal/admin_toolbar": "1.20.0",
    "drupal/jsonapi": "^1.0@alpha",
    "drupal/features": "^3.5",
    "flc/data_model": "^8.1",
    "drupal/simple_oauth": "2.0-alpha2",
    "drupal/media_entity_image": "^1.2",
    "drupal/mandrill": "^1.0",
    "drupal/contact_message_rest": "^1.0@alpha",
    "drupal/module_filter": "^3.0",
    "drupal/toolbar_themes": "^1.0@alpha",
    "drupal/restui": "^1.13",
    "drupal/reroute_email": "^1.0@beta",
    "drupal/eck": "^1.0@alpha",
    "drupal/config_split": "^1.0@beta",
    "drupal/config_pages": "^2.0@RC",
    "drupal/field_group": "^1.0@RC",
    "drupal/config_ignore": "^2.1",
    "drupal/metatag": "^1.2",
    "drupal/config_installer": "^1.5",
    "drupal/default_content": "^1.0@alpha",
    "drupal/better_normalizers": "^1.0@beta",
    "drupal/config_filter": "^1.1",
    "drupal/rest_absolute_urls": "^1.0@beta",
    "drupal/editor_advanced_link": "^1.4",
    "drupal/consumer_image_styles": "^2.0@RC",
    "drupal/scheduler": "^1.0",
    "drupal/fieldable_path": "^1.0@RC",
    "drupal/redirect": "^1.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "pre-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  },
  "extra": {
    "drupal-scaffold": {
      "excludes": [
        "robots.txt"
      ]
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "patches": {
      "drupal/core": {
        "Menu content is not accessible via jsonapi": "https://www.drupal.org/files/issues/2018-03-19/menu_link_content-view-permissions-2915792-16.patch",
        "NegotiationMiddleware calls $request->setRequestFormat('html') when there is no _format request parameter, but shouldn't": "https://www.drupal.org/files/issues/2018-04-28/2854543-88.patch"
      },
      "drupal/jsonapi": {
        "Raise maximum page limit to 100": "patches/jsonapi_raise_maximum_page_limit_100.patch"
      },
      "drupal/metatag": {
        "Fix compatibility with jsonapi": "https://www.drupal.org/files/issues/make_metatag_fields-2636852-80.patch"
      }
    }
  },
  "replace": {
    "drupal/drupal": "*"
  },
  "require-dev": {
    "codeception/codeception": "^2.2.9",
    "drupal/devel": "^1.0@RC",
    "flow/jsonpath": "^0.3.4"
  }
}
